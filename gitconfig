[color]
	ui = auto
[merge]
	tool = vimdiff
[core]
	editor = vim
[alias]
    co = checkout
    st = status
    ci = commit
    br = branch
    cb = checkout -b
    df = diff
    ls = log --stat
    lp = log -p
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[push]
    default = matching
